<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding: 15,15
            spacing: 20,20
            Label:
                text: "User Login"
                font_size: '20sp'
            TextInput:
                id: username
                hint_text: "User Name"
            TextInput:
                id: password
                hint_text: "Password"
                password: True
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press:root.log_in(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3,0.6
                    pos_hint:{'center_x':0.5, 'center_y': 0.6}
            Label:
                id: mismatch
                text:""
        GridLayout:
            cols :2
            size_hint: 0.2,0.2
            padding: 15,15
            spacing: 20,20
            Button:
                text:"Forgot Password?"
                on_press: root.forgot_password()
                background_color:1,1,1,0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1,0.7, 1, 1
            Button:
                text: "Sign up"
                on_press: root.sign_up()
                background_color:1,1,1,0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1,0.7, 1, 1

<SignupScreen>:
    GridLayout:
        cols:1
        padding: 15,15
        spacing: 20,20
        Label:
            text: "Sign up for a space journey!"
            size_hint: 0.3,0.3
        TextInput:
            id: username
            hint_text: "New User Name"
            size_hint: 0.3,0.3
        TextInput:
            id: password
            hint_text: "New Password"
            size_hint: 0.3,0.3
        RelativeLayout:
            Button:
                text: "Submit"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)
                size_hint: 0.3,0.3
                pos_hint:{'center_x':0.5, 'center_y': 0.6}

<SignupSuccessScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text: "Signed up suceessfully!"
            Button:
                text:"Login Page"
                on_press: root.go_to_login_page()
            

<LoginSuccessScreen>:
    GridLayout:
        padding: 15,15
        spacing: 20,20
        cols:1
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                size_hint: 0.3,0.3
                source: "logout_hover.png" if self.hovered else "logout_nothover.png"
                pos_hint:{'center_x':0.93, 'center_y': 0.8}
        Label:
            text: "How do you feel?"
        TextInput:
            id: feeling
            hint_text: "Things to try: Happy, Sad, Unloved"
        Button:
            text:"Enlighten me"
            on_press: root.enligten_me()
        ScrollView:
            Label:
                id: quote
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<ForgotPWScreen>:
    GridLayout:
        cols:1
        Label:
            text: "User Login"
        TextInput:
            id: username
            hint_text: "Enter your User Name"
        Button:
            text:"Get Password"
            on_press: root.get_password(root.ids.username.text)
        Label:
            id:password
            text:""
        Button:
            text:"Go to Log in page"
            on_press: root.go_to_login()

            
<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignupScreen:
        name: "signup_screen"
    SignupSuccessScreen:
        name: "signup_success_screen"
    LoginSuccessScreen:
        name: "login_success_screen"
    ForgotPWScreen:
        name: "forgot_pw_screen"

    

        

